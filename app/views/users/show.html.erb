<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>

  <% if facade.token %>
    <section class='github-dashboard'>
      <h1>GitHub</h1>
      <section class='github-dashboard-repos'>
        <h2>Repositories</h2>
          <ul>
          <% facade.repositories.each do |repo| %>
            <li><%= link_to repo.name, repo.html_url %></li>
          <% end %>
          </ul>
      </section>
      <section class='github-dashboard-followers'>
        <h2>Followers</h2>
          <ul>
          <% facade.followers.each do |follower| %>
            <li><%= link_to follower.name, follower.html_url %></li>
          <% end %>
          </ul>
      </section>
    </section>
  <% end %>
</section>
